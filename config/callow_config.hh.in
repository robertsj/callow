#cmakedefine CALLOW_ENABLE_PETSC_OPS

#ifdef CALLOW_ENABLE_PETSC
#include "petsc.h"
#endif

#ifdef CALLOW_ENABLE_SLEPC
#include "slepc.h"
#endif

#endif // CALLOW_CONFIG_HH_ 

